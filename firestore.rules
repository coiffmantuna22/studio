
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     * This is the primary ownership check.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the incoming resource data contains the correct owner userId.
     * Used for document creation.
     */
    function isCreatingOwnResource() {
      // Ensure the data being created has a userId field that matches the creator's UID
      return request.resource.data.userId == request.auth.uid;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    match /teachers/{teacherId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isCreatingOwnResource();
    }
    match /teachers {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
    
    match /classes/{classId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isCreatingOwnResource();
    }
    match /classes {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
    
    match /settings/{settingId} {
      allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isCreatingOwnResource();
    }
    match /settings {
        allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }

    match /substitutions/{substitutionId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isCreatingOwnResource();
    }
     match /substitutions {
        allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }

    match /events/{eventId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isCreatingOwnResource();
    }
    match /events {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
    
    match /majors/{majorId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && isCreatingOwnResource();
    }
    match /majors {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     * This is the primary ownership check.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the incoming resource data contains the correct owner userId.
     * Used for document creation.
     */
    function isCreatingOwnResource() {
      return request.resource.data.userId == request.auth.uid;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    match /teachers/{teacherId} {
      allow read: if isSignedIn() && isOwner(get(/databases/$(database)/documents/teachers/$(teacherId)).data.userId);
      allow create: if isSignedIn() && isCreatingOwnResource();
      allow update, delete: if isSignedIn() && isOwner(get(/databases/$(database)/documents/teachers/$(teacherId)).data.userId);
    }
    match /teachers {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
    
    match /classes/{classId} {
      allow read: if isSignedIn() && isOwner(get(/databases/$(database)/documents/classes/$(classId)).data.userId);
      allow create: if isSignedIn() && isCreatingOwnResource();
      allow update, delete: if isSignedIn() && isOwner(get(/databases/$(database)/documents/classes/$(classId)).data.userId);
    }
     match /classes {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
    
    match /settings/{settingId} {
      allow read: if isSignedIn() && isOwner(get(/databases/$(database)/documents/settings/$(settingId)).data.userId);
      allow create: if isSignedIn() && isCreatingOwnResource();
      allow update: if isSignedIn() && isOwner(get(/databases/$(database)/documents/settings/$(settingId)).data.userId);
    }
    match /settings {
        allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }

    match /substitutions/{substitutionId} {
      allow read, create, update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    match /substitutions {
        allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
  }
}

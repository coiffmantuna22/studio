
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     * This is the primary ownership check.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the incoming resource data contains the correct owner userId.
     * Used for document creation.
     */
    function isCreatingOwnResource(userId) {
      return request.resource.data.userId == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /teachers/{teacherId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && isCreatingOwnResource(request.auth.uid);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /classes/{classId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && isCreatingOwnResource(request.auth.uid);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /settings/{settingId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && isCreatingOwnResource(request.auth.uid);
      allow update: if isSignedIn() && isOwner(resource.data.userId);
    }
  }
}

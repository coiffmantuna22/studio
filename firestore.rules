
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     * This is the primary ownership check.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    /**
     * @description Main rule for user-specific data. A user can only access
     * documents within their own data tree.
     * @path /users/{userId}
     */
    match /users/{userId} {
      // A user can read/write their own top-level document if needed.
      // This is often used for user profile information.
      allow read, write: if isOwner(userId);

      /**
       * @description A user can manage all collections (teachers, classes, settings)
       * that belong to them. This single rule covers all subcollections.
       * @path /users/{userId}/{collection}/{docId}
       */
      match /{collection}/{docId} {
        allow read, write, create, delete, list: if isOwner(userId);
      }
    }
  }
}
